<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    tools:background="@color/white">

    <TextView
        android:id="@+id/titleOfItem"
        style="@style/TextStyle.Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingHorizontal="16dp"
        tools:text="Central Europe" />

    <TextView
        android:id="@+id/days"
        style="@style/TextStyle.Day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleOfItem"
        android:layout_marginTop="2dp"
        android:lineHeight="25sp"
        android:paddingHorizontal="16dp"
        tools:ignore="UnusedAttribute"
        tools:text="Tuesday, Wednesday, Thursday, Friday, Saturday, Sunday" />

    <TextView
        android:id="@+id/time"
        style="@style/TextStyle.Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/days"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:maxLines="1"
        android:paddingHorizontal="16dp"
        tools:text="7:00" />


    <View
        style="@style/AppTheme.HorizontalViewDivider"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp" />

    <FrameLayout
        android:id="@+id/edit_card_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_disabled_dark"
        android:visibility="gone"
        tools:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_card_container"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/button_ripple_green"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back" />

            <ImageView
                android:id="@+id/edit_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/delete_item"
                android:background="@drawable/button_ripple_green"
                android:padding="12dp"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/iv_move_item"
                android:background="@drawable/button_ripple_green"
                android:padding="12dp"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/iv_move_item"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_ripple_green"
                android:padding="8dp"
                android:src="@drawable/ic_menu_white" />

        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>